{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "overrides": [
        {
            "files": [
                "*.js",
                "*jsx",
                "*.ts",
                "*.tsx"
            ]
        }
    ],
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": [
            2,
            "double",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2,
            {"SwitchCase": 1}

        ],
        "no-multi-spaces": "error",
        "react/prop-types": 0
    },
    "settings": {
        "react": {
          "version": "detect"
        }
      }
}